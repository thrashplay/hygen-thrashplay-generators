{
  "name": "hygen-thrashplay-generators",
  "version": "0.1.0",
  "description": "@thrashplay/sandbox-bootstrap templates",
  "license": "MIT",
  "author": "Sean Kleinjung <sean@thrashplay.com>",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "build": "yarn clean && yarn lerna run build",
    "clean": "yarn lerna run clean",
    "release": "yarn lerna publish --yes --conventional-commits",
    "release:graduate": "yarn release --conventional-graduate",
    "release:pre": "yarn release --conventional-prerelease --preid ${PRERELEASE_ID} --dist-tag ${PRERELEASE_ID}",
    "template": "cross-env HYGEN_TMPLS=packages/hygen-thrashplay-node-generators/templates yarn hygen",
    "test": "yarn lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "github:thrashplay/hygen-thrashplay-generators"
  },
  "dependencies": {},
  "devDependencies": {
    "cross-env": "^6.0.3",
    "lerna": "^3.16.4"
  }
}
